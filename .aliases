#!/usr/bin/env bash

alias sudo='sudo '                                      # enable aliases to be sudoâ€™ed
alias cp="cp -iv"
alias mv="mv -iv"
alias mkdir="mkdir -pv"
alias rm="rm -v"
alias ll="ls -FGlahto"
alias cpd="cp -R"                                       # copy directory tree
alias rmd="rm -rfv"
alias path="echo -e ${PATH} \
| tr ':' '\n'"                                          # pretty PATH 
alias grep="grep -in --color"                           # ignore-case with line number
alias dus="du -sh | cut -f1"
alias pbcopy=$(hash pbcopy 2>/dev/null \
&& echo "pbcopy" || echo "xclip -selection clipboard")
alias pbpaste=$(hash pbpaste 2>/dev/null \
&& echo "pbpaste" || echo "xclip -selection clipboard -o")
alias topm="top -o rsize"
alias topc="top -o cpu"
alias cpwd="pwd | pbcopy"
alias cl="fc -e - | pbcopy"                             # copy output of last cmd
alias cal="cal -3"
alias lsof="lsof -aP"
alias journalctl="journalctl -xn"


# VCS

alias config="/usr/bin/git \
--git-dir=$HOME/.cfg/ \
--work-tree=$HOME"                                      # git repository for .files


# OS-SPECIFIC

os=$(uname -s)

if [ "$os" == "Linux" ]; then
    alias gno="gnome-open ."
    alias gdrive="google-drive-ocamlfuse $HOME/gdrive/"
    alias ll="ls -FGlahto --color=auto"
fi

# APPS

[ -f $HOME/.aliases.local ] && source $HOME/.aliases.local

alias py2=python2.7
alias py3=python3.5
alias tmux_dt="tmux detach"
alias tmux_ls="tmux list-sessions"
alias redis_start="sudo redis-server \
/opt/local/etc/redis.conf &"
alias pg95_start="sudo /opt/local/etc/
LaunchDaemons/org.macports.postgresql95-server/\
postgresql95-server.wrapper start"
alias pg95_stop="sudo  /opt/local/etc/
LaunchDaemons/org.macports.postgresql95-server/\
postgresql95-server.wrapper stop"
alias pg96_start="sudo /opt/local/etc/\
LaunchDaemons/org.macports.postgresql96-server/\
postgresql96-server.wrapper start"
alias pg96_stop="sudo  /opt/local/etc/\
LaunchDaemons/org.macports.postgresql96-server/\
postgresql96-server.wrapper stop"
alias rabbitmq_start="sudo rabbitmq-server"
alias rabbitmq_stop="sudo rabbitmqctl stop"
