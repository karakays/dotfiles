[user]
    email           = skarakayali@gmail.com
    name            = Selçuk Karakayalı
    signingkey      = skarakayali@gmail.com
[core]
    editor          = vim
    excludesfile    = .gitignore_global
    autocrlf        = false
[commit]
    template        = ~/.gitrc/.stCommitMsg
[alias]
    ci              = commit -S
    co              = checkout
    cla             = clone --recurse-submodules
    logp            = log --all --decorate --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    st              = status
    diffs           = diff --staged
[color]
    ui              = true
[credential]
    helper          = cache --timeout=3600
[submodule]
    recurse         = true
