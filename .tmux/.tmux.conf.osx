# copy-mode bindings
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "pbcopy"

# panes
set-option -g pane-border-style bg=default,fg=colour14

# statusbar
set-option -g status-right '#[fg=colour178] #{?client_prefix,#[reverse]<Prefix>#[noreverse] ,} '
set-option -ag status-right '#[bg=cyan,fg=white,nobright,bold] MEM #(mem) '
set-option -ag status-right '#[bg=default] CPU #(uptime | rev | cut -d":" -f1 | rev | sed s/,//g) '
set-option -ag status-right '#[bg=cyan,fg=white,nobright, bold] #(ipad) ' 
set-option -ag status-right '#[bg=default] ðŸŽ§ #(nowplaying) '
set-option -ag status-right '#[bg=default]ðŸ“… %d-%b %H:%M' 

set-option -g status-left '#[bg=cyan,fg=white] #H #[bg=default] '
