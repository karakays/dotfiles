# copy-mode bindings
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "pbcopy"

# panes
set-option -g pane-border-style bg=default,fg=colour14

# statusbar
set-option -g status-right '#[fg=colour178] #{?client_prefix,#[reverse]<Prefix>#[noreverse] ,} '
set-option -ag status-right '#[bg=default,fg=white,nobright,bold] MEM #(mem) '
set-option -ag status-right 'CPU #(uptime | rev | cut -d ":" -f1 | rev | xargs) '
set-option -ag status-right '#[fg=white,nobright, bold] #(ipad || echo 0.0.0.0) '
set-option -ag status-right ' ðŸŽ§ #(nowplaying) '
set-option -ag status-right 'ðŸ“… %d-%b %H:%M'

set-option -g status-left '#[bg=cyan,fg=white] #H #[bg=default] '
