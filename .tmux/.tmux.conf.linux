# copy-mode bindings
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "xclip -selection clipboard -i || clip.exe"

# panes
set-option -g pane-active-border-style bg=default,fg=yellow

# wg_cpu="#[bg=default] CPU #(uptime | rev | cut -d":" -f1 | rev | sed s/,//g)"

# statusbar
set-option -g status-right '#[fg=colour31] #{?client_prefix,#[reverse]<Prefix>#[noreverse] ,} '
set-option -ag status-right '#[bg=default,fg=colour245,nobright,bold] MEM #(mem) '
